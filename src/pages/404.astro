---
import FireButton from "~/components/ui/FireButton.astro";
import Layout from "~/layouts/Layout.astro";
import { getHomePermalink } from "~/utils/permalinks";

const title = `Page Not Found | Flame the Freeze`;
const description = "The page you're looking for doesn't exist. Return to discover God's fire and purpose.";
---

<Layout metadata={{ title, description }}>
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Main Content -->
    <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
      <!-- 404 Number with Fire Effect -->
      <div class="relative mb-8">
        <h1
          class="text-8xl md:text-9xl lg:text-[12rem] font-bold bg-gradient-to-r from-orange-600 to-yellow-500 bg-clip-text text-transparent"
        >
          404
        </h1>
      </div>

      <!-- Main Message -->
      <div class="space-y-6 mb-12">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight">
          Lost in the <span class="bg-gradient-to-r from-orange-400 to-red-500 bg-clip-text text-transparent"
            >Fire?</span
          >
        </h2>
        <p class="text-xl md:text-2xl text-blue-100 leading-relaxed max-w-2xl mx-auto">
          The page you're seeking has vanished like smoke.
        </p>
        <p class="text-lg text-blue-200/80 max-w-xl mx-auto">
          Don't let this detour extinguish your flame. Return to discover God's purpose and ignite your passion.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <FireButton
          href={getHomePermalink()}
          text="ðŸ”¥ Return to the Fire"
          variant="primary"
          size="medium"
          icon="tabler:arrow-back-up"
        />
      </div>
    </div>
  </section>
</Layout>
