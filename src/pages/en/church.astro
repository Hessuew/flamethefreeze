          { text: t("church.steps.items3.description1") },
          { text: t("church.steps.items3.description2") },
          { text: t("church.steps.items3.description3") },
        ],
        icon: "tabler:number-3",
      },
    ]}
  />

  <Steps
    isReversed={true}
    classes={{ container: "md:py-0 lg:py-0 xl:py-0" }}
    items={[
      {
        title: t("church.steps.items4.title"),
        description: [
          { text: t("church.steps.items4.description1") },
          { text: t("church.steps.items4.description2") },
          { subtitle: true, text: t("church.steps.items4.description3") },
          { text: t("church.steps.items4.description4") },
          { text: t("church.steps.items4.description5") },
          { subtitle: true, text: t("church.steps.items4.description6") },
          { text: t("church.steps.items4.description7") },
          { text: t("church.steps.items4.description8") },
        ],
        icon: "tabler:number-4",
