---
import Layout from "~/layouts/PageLayout.astro";
import HeroText from "~/components/widgets/HeroText.astro";
import Steps from "~/components/widgets/Steps.astro";
import GradientText from "~/components/ui/GradientText.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";

const metadata = {
  title: "The Church",
};

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline={t("church.herotext.tagline")}>
    <Fragment slot="title">
      {t("church.herotext.title1")}
      <GradientText text={t("church.herotext.title.span")} />
      {t("church.herotext.title2")}
    </Fragment>

    <Fragment slot="subtitle">
      {t("church.herotext.subtitle1")}
      <span class="font-semibold">{t("church.herotext.subtitle.span1")} </span>
      {t("church.herotext.subtitle2")}
      <GradientText class="font-bold" text={t("church.herotext.subtitle.span2")} />
      {t("church.herotext.subtitle3")}
    </Fragment>
  </HeroText>

  <!-- Steps Widget ****************** -->

  <Steps
    tagline={t("church.steps.tagline")}
    title={t("church.steps.title")}
    isReversed={true}
    classes={{ container: "md:pb-0 lg:pb-0 xl:pb-0" }}
    items={[
      {
        title: t("church.steps.items1.title"),
        description: [
          { text: t("church.steps.items1.description1") },
          { text: t("church.steps.items1.description2") },
          { text: t("church.steps.items1.description3") },
        ],
        icon: "tabler:number-1",
      },
    ]}
  />

  <Steps
    isReversed={true}
    classes={{ container: "md:py-0 lg:py-0 xl:py-0" }}
    items={[
      {
        title: t("church.steps.items2.title"),
        description: [
          { text: t("church.steps.items2.description1") },
          { text: t("church.steps.items2.description2") },
          { text: t("church.steps.items2.description3") },
        ],
        icon: "tabler:number-2",
      },
    ]}
  />

  <Steps
    isReversed={true}
    classes={{ container: "md:py-0 lg:py-0 xl:py-0" }}
    items={[
      {
        title: t("church.steps.items3.title"),
