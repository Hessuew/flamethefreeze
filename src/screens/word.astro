            client:load
            className="text-4xl xs:text-5xl md:text-6xl xl:text-[60px] xl:leading-[64px] font-semibold leading-tight tracking-tighter mb-0 md:mb-4 xl:mb-[16px] font-heading text-orange-400"
            animation="blurInUp"
            delay={1.6}
            duration={0.6}
            by="character"
            once={true}
            text={t("word.hero.title.2")}
          />
        </div>
      </Fragment>

      <Fragment slot="subtitle">
