          subtitle={t("word.hero.subtitle.1")}
          label1={t("word.hero.subtitle.item.1")}
          label2={t("word.hero.subtitle.item.2")}
          label3={t("word.hero.subtitle.item.3")}
        />
      </Fragment>
    </Hero>

    <!-- Actions positioned at bottom center on mobile, bottom right on larger screens -->
