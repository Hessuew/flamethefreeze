---
import Layout from "~/layouts/Layout.astro";
import Header from "~/components/widgets/Header.astro";
import Footer from "~/components/widgets/Footer.astro";
import Announcement from "~/components/widgets/Announcement.astro";

import { headerData } from "~/navigation";

import type { MetaData } from "~/types";

export interface Props {
  metadata?: MetaData;
  siteRebuildStatus?: { status?: "notStarted" | "inProgress" | "completed"; display?: boolean };
}

const { metadata, siteRebuildStatus } = Astro.props;
---

<Layout metadata={metadata}>
  <slot name="announcement">
    <Announcement siteRebuildStatus={siteRebuildStatus} />
  </slot>
  <slot name="header">
    <Header {...headerData} showToggleTheme={false} isSticky />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer />
  </slot>
</Layout>
