---
import Layout from "~/layouts/Layout.astro";
import Header from "~/components/widgets/Header.astro";
import Footer from "~/components/widgets/Footer.astro";
import Announcement from "~/components/widgets/Announcement.astro";

import { headerData } from "~/navigation";

import type { MetaData } from "~/types";

interface Props {
  metadata?: MetaData;
  siteRebuildStatus?: { status?: "notStarted" | "inProgress" | "completed"; display?: boolean };
  lang?: "fi" | "en";
}

export type PageLayoutProps = {
  metadata: Props["metadata"];
  siteRebuildStatus: Props["siteRebuildStatus"];
  lang: "fi" | "en";
};

const { metadata, siteRebuildStatus, lang } = Astro.props;
---

<Layout metadata={metadata}>
  <slot name="announcement">
    <Announcement lang={lang} siteRebuildStatus={siteRebuildStatus} />
  </slot>
  <slot name="header">
    <Header {...headerData} lang={lang} showToggleTheme={false} isSticky />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer lang={lang} />
  </slot>
</Layout>
