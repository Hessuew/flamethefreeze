    <!-- Upward movement indicator -->
    <path d="M18 15l0-1M17 15l1-1 1 1" stroke="url(#transformGradient)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" opacity="0.7" />
  </svg>
)}

