---
import Button from "~/components/ui/Button.astro";

const {
  title = await Astro.slots.render("title"),
  subtitle = await Astro.slots.render("subtitle"),
  tagline,
  content = await Astro.slots.render("content"),
  callToAction = await Astro.slots.render("callToAction"),
  callToAction2 = await Astro.slots.render("callToAction2"),
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl xl:max-w-[1280px] mx-auto px-4 sm:px-6 xl:px-[24px]">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20 xl:py-[80px] pb-8 md:pb-8 xl:pb-[32px]">
      <div class="text-center max-w-5xl xl:max-w-[1024px] mx-auto">
        {
          tagline && (
            <p
              class="text-base xl:text-[16px] xl:leading-[24px] bg-gradient-to-r from-orange-600 to-yellow-500 bg-clip-text text-transparent font-bold tracking-wide uppercase intersect-once intersect-quarter motion-safe:opacity-0 motion-safe:intersect:animate-fade"
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class="text-5xl md:text-6xl xl:text-[60px] xl:leading-[68px] font-bold leading-tighter tracking-tighter mb-4 xl:mb-[16px] font-heading text-gray-200 intersect-once intersect-quarter motion-safe:opacity-0 motion-safe:intersect:animate-fade"
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto">
          {
            subtitle && (
              <p
                class="text-xl xl:text-[20px] xl:leading-[28px] text-muted mb-6 xl:mb-[24px] text-slate-300 intersect-once intersect-quarter motion-safe:opacity-0 motion-safe:intersect:animate-fade"
                set:html={subtitle}
              />
            )
          }
          <div
            class="max-w-xs sm:max-w-md xl:max-w-[448px] m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 xl:gap-[16px] intersect-once intersect-quarter motion-safe:opacity-0 motion-safe:intersect:animate-fade"
          >
            {
              callToAction && (
                <div class="flex w-full sm:w-auto">
                  {typeof callToAction === "string" ? (
                    <Fragment set:html={callToAction} />
                  ) : (
                    <Button variant="primary" {...callToAction} />
                  )}
                </div>
              )
            }
            {
              callToAction2 && (
                <div class="flex w-full sm:w-auto">
                  {typeof callToAction2 === "string" ? (
                    <Fragment set:html={callToAction2} />
                  ) : (
                    <Button {...callToAction2} />
                  )}
                </div>
              )
            }
          </div>
        </div>
        {content && <Fragment set:html={content} />}
      </div>
    </div>
  </div>
</section>
