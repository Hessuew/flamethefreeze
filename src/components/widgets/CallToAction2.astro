---
import { getPermalink } from "~/utils/permalinks";
import WidgetWrapper from "../ui/WidgetWrapper.astro";
import type { Widget } from "~/types";
import { getLanguageRoute } from "~/navigation";
import FireButton from "../ui/FireButton.astro";

interface Props extends Widget {
  title?: string;
  title2?: string;
  subtitle?: string;
  button: {
    href: string;
    text: string;
    icon: string;
  };
  id?: string;
  lang?: "fi" | "en";
}

const {
  title,
  title2,
  subtitle,
  button,

  id,
  lang = "en",
  classes = {},
} = Astro.props as Props;
---

<WidgetWrapper id={id} classes={classes}>
  <div class="text-center">
    <h2 class="text-4xl md:text-5xl xl:text-[48px] xl:leading-[56px] font-bold mb-6 xl:mb-[24px] text-white">
      {title}
      <span class="bg-gradient-to-r from-orange-400 to-red-500 bg-clip-text text-transparent">{title2}</span>?
    </h2>
    <p
      class="text-xl xl:text-[20px] xl:leading-[28px] text-gray-300 mb-8 xl:mb-[32px] max-w-3xl mx-auto xl:max-w-[768px]"
    >
      {subtitle}
    </p>

    <div class="flex flex-col sm:flex-row gap-6 xl:gap-[24px] justify-center">
      <FireButton
        href={getPermalink(getLanguageRoute(button.href, lang || "en"))}
        text={button.text}
        variant="primary"
        size="large"
        icon={button.icon}
      />
    </div>
  </div>
</WidgetWrapper>
