---
import { getPermalink } from "~/utils/permalinks";
import youtubeLogo from "~/assets/images/footer/rukous_seurakunta_youtube_logo.png";
import prayerChurchLogo from "~/assets/images/footer/prayer-church-website-design-logo.webp";
import Image from "astro/components/Image.astro";
import { twMerge } from "tailwind-merge";
import { useTranslations } from "~/i18n/utils";

import { getLanguageRoute } from "~/navigation";

export interface Props {
  theme?: string;
  lang?: "fi" | "en";
}

const { lang } = Astro.props;

const t = useTranslations(lang || "en");

const links = [
  {
    title: t("header.flameUp"),
    links: [
      { text: t("header.link1"), href: "word" },
      { text: t("header.link2"), href: "prayer" },
      { text: t("header.link3"), href: "church" },
      { text: t("header.link4"), href: "devotions" },
    ],
  },
  {
    title: t("header.resources"),
    links: [
      { text: t("header.link5"), href: "witnesses" },
      { text: t("header.link6"), href: "fivefold" },
      { text: t("header.link7"), href: "events" },
    ],
  },
];

const socialLinks = [
  {
    ariaLabel: t("footer.prayerChurch"),
    href: "https://rukouksenseurakunta.fi",
    image: {
      src: prayerChurchLogo,
      alt: "PrayerChurch",
    },
  },
  {
    ariaLabel: "YouTube",
    href: "https://youtube.com/@flamethefreeze2613?si=wBdFBGx335N-vee-",
    image: {
      src: youtubeLogo,
      alt: "YouTube FlameTheFreeze",
    },
  },
];

const { theme = "light" } = Astro.props;
---

<footer class:list={[{ dark: theme === "dark" }, "relative border-t border-slate-800 not-prose"]}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl xl:max-w-[1280px] mx-auto px-4 sm:px-6 xl:px-[24px] text-slate-300">
    <div
      class="grid grid-cols-12 gap-4 sm:gap-8 xl:gap-[32px] gap-y-8 xl:gap-y-[32px] pt-8 pb-4 md:pt-12 xl:pt-[48px] md:pb-8 xl:pb-[32px]"
    >
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-2 xl:mb-[8px]">
          <a class="inline-block font-bold text-xl xl:text-[20px] xl:leading-[28px]" href="/">Flame the Freeze</a>
        </div>
        <div class="text-sm xl:text-[14px] xl:leading-[20px] text-muted lg:max-w-[320px]">
          {t("footer.titleDescription")}
        </div>
      </div>
      {
        links.map(({ title, links }, index) => (
          <div class={twMerge("col-span-6 md:col-span-3 lg:col-span-2 lg:min-w-[200px]", index === 0 && "lg:min-w-0")}>
            <div class="text-gray-300 font-medium mb-2 xl:mb-[8px] xl:text-[16px] xl:leading-[24px]">{title}</div>
            {links && Array.isArray(links) && (
              <ul class="text-sm xl:text-[14px] xl:leading-[20px]">
                {links.map(({ text, href }) => (
                  <li class="mb-2 xl:mb-[8px]">
                    <a
                      class="group relative text-gray-400 transition-all duration-300 ease-in-out hover:text-orange-400 inline-block py-1 px-2 rounded-md hover:bg-gradient-to-r hover:from-orange-500/10 hover:to-red-500/10 hover:shadow-lg hover:shadow-orange-500/20 hover:scale-105 hover:translate-x-1"
                      href={getPermalink(getLanguageRoute(href || "", lang || "en"))}
                    >
                      <span class="relative z-10">{text}</span>
                      <span class="absolute inset-x-0 bottom-0 h-0.5 bg-gradient-to-r from-orange-400 to-red-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-out origin-left" />
                      <span class="absolute inset-0 bg-gradient-to-r from-orange-500/5 to-red-500/5 rounded-md opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out" />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>
    <div class="md:flex md:items-end md:justify-between py-6 xl:py-[24px]">
      <div
        class="text-sm text-center sm:text-left pb-4 sm:pb-0 xl:text-[14px] xl:leading-[20px] mr-4 xl:mr-[16px] text-muted"
      >
        © {new Date().getFullYear()} Flame the Freeze · {t("footer.allRights")}
      </div>
      <div class="flex flex-col items-center sm:items-end sm:justify-end">
        {
          socialLinks?.length ? (
            <nav aria-label="Social media links" class="flex mb-4">
              {socialLinks.map(({ ariaLabel, href, image }) => (
                <div class="group relative">
                  <a
                    class={twMerge(
                      "relative transition-all duration-300 ease-in-out text-orange-400 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-orange-700 rounded-lg text-sm xl:text-[14px] xl:leading-[20px] p-2.5 xl:p-[10px] inline-flex items-center hover:bg-gradient-to-br hover:from-orange-500/20 hover:to-red-500/20 hover:shadow-xl hover:shadow-orange-500/30 hover:rotate-3 hover:-translate-y-1"
                    )}
                    aria-label={ariaLabel}
                    href={href}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <span class="absolute inset-0 bg-gradient-to-br from-orange-400/10 to-red-400/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-sm"></span>
                    {image && (
                      <Image
                        src={image.src}
                        alt={image.alt}
                        class="relative z-10 w-5 xl:w-[20px] h-5 xl:h-[20px] object-contain rounded transition-all duration-300 group-hover:brightness-110 group-hover:contrast-110"
                        width={400}
                        height={400}
                        loading={"lazy"}
                        decoding={"async"}
                      />
                    )}
                  </a>
                  <span class="absolute -top-12 xl:-top-[48px] left-1/2 -translate-x-1/2 whitespace-nowrap rounded-lg px-3 xl:px-[12px] py-2 xl:py-[10px] text-sm xl:text-[14px] xl:leading-[20px] text-white opacity-0 transition-all duration-300 delay-200 group-hover:opacity-100 group-hover:-translate-y-1 bg-gradient-to-r from-orange-600 to-red-600 shadow-lg shadow-orange-500/25 backdrop-blur-sm border border-orange-400/30">
                    {ariaLabel}
                    <span class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-orange-600"></span>
                  </span>
                </div>
              ))}
            </nav>
          ) : (
            ""
          )
        }
        <div class="text-end">
          <p class="text-sm xl:text-[14px] xl:leading-[20px] mr-3 xl:mr-[12px] text-muted">
            Designed and developed by
            <a
              href="https://cherubim-it.com"
              target="_blank"
              rel="noopener noreferrer nofollow"
              class="group relative font-semibold transition-all duration-500 ease-out text-orange-600 hover:text-transparent inline-block hover:scale-110 hover:-rotate-1 hover:shadow-2xl hover:shadow-orange-500/40"
            >
              <span class="relative z-10 bg-gradient-to-r from-orange-400 via-red-500 to-yellow-400 bg-clip-text text-transparent group-hover:from-yellow-300 group-hover:via-orange-400 group-hover:to-red-500 transition-all duration-500">
                Cherubim IT
              </span>
              <span class="absolute inset-0 bg-gradient-to-r from-orange-500/20 via-red-500/20 to-yellow-500/20 rounded-lg blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-pulse"></span>
              <span class="absolute -inset-1 bg-gradient-to-r from-orange-600 via-red-600 to-yellow-600 rounded-lg opacity-0 group-hover:opacity-20 transition-opacity duration-500 blur-sm"></span>
              <span class="absolute inset-x-0 -bottom-1 h-0.5 bg-gradient-to-r from-orange-400 via-red-500 to-yellow-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 ease-out origin-center"></span>
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
